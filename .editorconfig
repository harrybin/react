# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_size = 2
insert_final_newline = true

[*.{tsx,ts,js,json}]
charset = utf-8
indent_style = space
indent_size = 4

[package.json]
indent_size = 2

# Markdown
[*.md]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
